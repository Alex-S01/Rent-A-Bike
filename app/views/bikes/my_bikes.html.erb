
<div class="page-content page-container" id="page-content">

  <br/><br/><br/>

  <div class="row d-flex justify-content-center">
    <div class=" bg-c-lite-green user-profile" style="width:100%;">
      <div class="card-block text-center text-white">

              <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
          </div>

                <h1>My bikes</h1>





               <br/>


           </div>
           </div>






           <div class= "row container d-flex justify-content-around">

            <% @bikes.each do |bike| %>


    <div class="card " style="padding-top: 0px;">



    <div class="cardpic" style="width: 18rem; background: white; border-radius: 8px; box-shadow: 0 10px 30px rgba(0,0,0,0.2);">

       <% if bike.photo.attached? %>
            <%= cl_image_tag bike.photo.key, height: 216, width: 288, crop: :fill, :style => 'border-radius: 8px;' %>
          <% else %>
            <img src="https://picsum.photos/400/300" class="card-img-top" src="..." alt="Card image cap" style="border-radius:8px;">
          <% end %>



  <div class="card-body" style="background: rgba(250,250,250,0.9);color:black;  width:100%;">
      <div class="card-title">
                 <p> <h2><%= bike.model if bike.user == current_user %></h2>
                  <br>
                  <%= link_to "View bike", bike_path(bike), :class=>"btn btn-primary", :style =>"color:white; border-radius:10px" %> | <%= link_to "View bookings", bike_bookings_path(bike),:class=>"btn btn-primary", :style => "color:white;border-radius:10px" %></p>
                  <p>You have <%= bike.bookings.count %> bookings for this bike</p>

                  <br/>
               </div>

  </div>





</div>
              </div>
              <%end%>

            </div>

</div>






