<div class="container">
  <div class="form">
    <h1>Add your bike to the platform</h1>
    <p>Enter your bike's details to start renting your bike to other members of Rentabike's community and start earning ğŸ’²ğŸ’²ğŸ’²</p>

    <div class="container-new-form">
      <%= simple_form_for(@bike) do |f| %>

        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.label :model, "Enter the name of your bike model"%>
          <%= f.text_field :model %>

          <%= f.label :condition, "What condition is your bike in?"%>
          <%= f.text_field :condition %>


          <%= f.label :price, "Enter the rental price per month for your bike"%>
          <%= f.number_field :price %>

          <%= f.input :photo, as: :file %>
        </div>

        <div class="form-actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

