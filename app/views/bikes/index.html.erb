

<div class="indexbike-container" >


<div class="search">

    <div class ="search-bar form-inline">

      <h1 id="titreindexbike" style="color:white; border:1px solid white;">

        <br><br>

        Available <span style="color:black; background:rgba(250,0,0,0.7);border-radius:5px">Bikes</span></h1>


    <p class="text-center" style="color:black;">Find the right bike for your needs.</p>



  <%= form_tag bikes_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
    placeholder: "Search for a bike"
    %>
    <%= submit_tag "Search", class: "btn btn-primary", id:"search-button" %>
    <% end %>
  </div>
<br/>
  </div>

  <div class="content">


      <div class="cards" style="border-top:10px solid red;text-align:center;margin:0 auto;">
        <% @bikes.each do |bike| %>
        <div class="card" style="width: 18rem; background: rgba(10,10,10,0.1);color:white;border:3px solid white">




          <% if bike.photo.attached? %>
                 <%= cl_image_tag bike.photo.key, height: 300, width: 282, crop: :fill %>
          <% else %>
          <img src="https://picsum.photos/400/300" class="card-img-top" src="..." alt="Card image cap">
          <% end %>

          <div class="card-title">
            <br/>
            <h3><%= bike.model %></h3>
          </div>



          <div class="card-body" style="background: rgba(250,250,250,0.9);color:black">
            <p>Owner: <%= bike.user.first_name %></p>
            <p>Condition: <%= bike.condition %> </p>
            <p>Price: <%= bike.price %> EUR / month</p>
            <p>Address: <%= bike.address %></p>


            <%= link_to 'More details', bike_path(bike), :class  => "btn btn-info", :style => "font-size: 12px; border-radius:10px; width: 120px; background:white;opacity:0.9" %>


            <% if bike.user != current_user %>
            <%= link_to 'Book now!', new_bike_booking_path(bike), :class => "btn btn-info", :style => "font-size: 12px; border-radius:10px; width: 120px;  background:rgba(250,0,0,0.7);color: white;"%>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>



<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>



</div>



<div class="footer">
  <div class="footer-copyright">
    <div>This website is made with <i class="fas fa-heart"></i> by Lucas, Sebastien and Alex </div>
  </div>

  <div class="footer-links">

    <div class="social-links">
      <a href="#"><i class="fab fa-github"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
    </div>
  </div>

</div>

</div>










