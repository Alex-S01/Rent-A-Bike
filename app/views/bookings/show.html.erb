<div class="container">
  <div class="row justify-content-center">
    <div class="booking-input">
      <p>Your Booking ID: <%=@booking.id%></p>
      <p>Bike Model: <%= @booking.bike.model %></p>
      <p>Bike condition: <%= @booking.bike.condition %></p>
      <p>Rental start date: <%=@booking.start_date%></p>
      <p>Rental end date: <%=@booking.end_date%></p>

      <p>Rented by: <%= @booking.bike.user.first_name %> </p>
      <p>Price: <%= @booking.bike.price %> </p>

      <%= link_to 'Back', bike_bookings_path(@booking.bike_id) %>|
      <%= link_to 'Edit booking', edit_bike_booking_path(@booking.bike_id) %>
      <%= link_to 'Delete booking', booking_path, method: :delete, data: { confirm: "Are you sure you want to delete this booking?" } %>
    </div>
  </div>
</div>
